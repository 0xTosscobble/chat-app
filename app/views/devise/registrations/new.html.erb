<%= render "devise/shared/links" %>
<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">

    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign up for Fantum</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

        <div>    
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <div class="">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-10 block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"%>
        </div>
 
        <div>
          <%= f.label :password, class: "mt-10 block text-sm font-medium text-gray-700" %>
          <div class="">
             <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> characters minimum)</em>
             <% end %>
             <%= f.password_field :password, autocomplete: "new-password", class: "mt-10 block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "mt-10 block text-sm font-medium text-gray-700" %>
          <div class="">
           
             <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-10 block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.fields_for :account, Account.new do |sub_form| %>
          <%= sub_form.label :username, class: "mt-10 block text-sm font-medium text-gray-700" %>
          <div class="">
           
            <%= sub_form.text_field :username, autocomplete: "username", class: "mt-10 block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "mt-20 flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>

        <% end %>  
        </div>

      

        <div class="flex items-center justify-between">
          <div class="mt-10 flex items-center">
            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="remember-me" class="ml-2 block text-sm text-gray-900">Remember me</label>
          </div>


       

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>