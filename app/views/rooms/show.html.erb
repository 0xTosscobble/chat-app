<div class="container mx-auto">
<div class="flex justify-end">
  <%= link_to "Account", account_path(:account => @user_object.try(:accounts_id)), class: "mt-10 mb-10 inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-700/10" %>
  <%= link_to "Log Out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete}, class: "mt-10 ml-20 mb-10 inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-700/10" %>
</div>
      <div class="min-w-full border rounded lg:grid lg:grid-cols-3">
        <div class="border-r border-gray-300 lg:col-span-1">
          <div class="mx-3 my-3">
            <div class="relative text-gray-600">
              
              
              <%= render partial: "rooms/form", locals: {room: Room.new} %>

            </div>
          </div>

          <ul class="overflow-auto h-[32rem]">
            <h2 class="my-2 mb-2 ml-2 text-lg text-gray-600">Chats</h2>
            <li data-chat-list='Room List'>
              <%= render @rooms %>
            </li>
          </ul>
        </div>
        <div class="hidden lg:col-span-2 lg:block">
          <div class="w-full">
            <div class="relative flex items-center p-3 border-b border-gray-300">
              <span class="block ml-2 font-bold text-gray-600"><%= @current_room.name %></span>
            </div>
            <div id="messages" data-controller="scroll"  class="relative w-full p-6 overflow-y-auto h-[40rem]">
              <ul data-chat-room='<%= @current_room.id %>' class="space-y-2">
                

                <% @messages.each do |message| %>
                     <% if message.user_id == @current_user %>
                        <li class="flex justify-end">
                          <div class="column">
                            <div class="relative max-w-xl px-4 py-2 text-gray-700 bg-gray-100 rounded shadow">
                              <span class="block"> <%= message.content %> </span>                  
                            </div>
                            <div class="relative max-w-xl px-4 py-2 text-gray-700 text-fu">
                              <span class="block"> <%= Account.find_by(user_id: message.user_id).username %> </span>
                            </div>
                          </div>
                        </li>
                     <% else %>
                        <li class="flex justify-start">
                          <div class="column">
                            <div class="relative max-w-xl px-4 py-2 text-gray-700 rounded shadow">
                              <span class="block"> <%= message.content %> </span>
                            </div>
                            <div class="relative max-w-xl px-4 py-2 text-gray-700 text-fu">
                              <span class="block"> <%= Account.find_by(user_id: message.user_id).username %> </span>
                            </div>
                          </div>
                        </li>
                    <% end %>
                <% end %>

              </ul>
